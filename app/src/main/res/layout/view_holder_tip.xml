<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginLeft="@dimen/margin_view_holder"
    android:layout_marginRight="@dimen/margin_view_holder"
    android:layout_marginTop="@dimen/margin_view_holder"
    >


    <TextView
        android:id="@+id/tip_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"

        android:textSize="@dimen/text_size_tip_heading"
        android:fontFamily="@font/font"
        android:textColor="@color/secondaryLightColor"
        android:textStyle="bold"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tip_heading"
        android:layout_marginTop="@dimen/bottom_margin_tip_description">


        <TextView
            android:id="@+id/tip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size"
            android:fontFamily="@font/font"
            android:textColor="@color/secondaryLightColor"

            android:justificationMode="inter_word"
            android:paddingBottom="40dp"
            />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout >